                Write-Host "winget has been successfully installed!"
                Remove-Item -Path $env:TEMP/winget.msixbundle
            }
            No {
                Write-Host "Skipping winget install."
            }
        } 
    } 
    winget -v
    if ($?) { 

        $apps = @{

